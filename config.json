
{
    "language"        : "PYTHON",
    "main-file"       : "spearmintRunner.py",
    "experiment-name" : "golovin",
    "likelihood"      : "GAUSSIAN",
    "polling-time"    : 1,
    "resources" : {
        "my-machine" : {
            "scheduler"         : "local",
            "max-concurrent"    : 4,
            "max-finished-jobs" : 1000
        }
    },
    "variables" : {
        "FIGHT_MODE" : {
            "type" : "ENUM",
            "size" : 1,
            "options": ["on", "off"]
        },
        "EXPLORING" : {
            "type" : "ENUM",
            "size" : 1,
            "options": ["random"]
        },
        "SOURCES": {
            "type" : "ENUM",
            "size" : 1,
            "options": ["all"]
        },
        "PLACE_TAKEN_LIMIT": {
            "type" : "INT",
            "size" : 1,
            "min" : 1,
            "max" : 15
        },
        "PLACE_NOUN_BONUS": {
            "type" : "FLOAT",
            "size" : 1,
            "min" : 10,
            "max" : 5000 
        },
        "PLACE_INIT_ACTIONS": {
            "type" : "INT",
            "size" : 1,
            "min" : 3,
            "max" : 15
        },
        "PLACE_MOVE_ACTION_RATIO": {
            "type": "INT",
            "size": 1,
            "min": 1,
            "max": 20
        },
        "PLACE_UNKNOWN_PENALTY": {
            "type": "FLOAT",
            "size": 1,
            "min": 10,
            "max": 3000
        },
        "PLACE_FREQUENCY_EXPONENT": {
            "type": "FLOAT",
            "size": 1,
            "min": 0,
            "max": 1
        }
    }
}
